<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnonMeet" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/dark_mode_primary</item>
        <item name="colorPrimaryDark">@color/dark_mode_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/dark_mode_secondary</item>
        <item name="colorSecondaryVariant">@color/dark_mode_secondary_variant</item>
        <item name="colorOnSecondary">@color/dark_mode_text_primary</item>
        <!-- Status bar color.
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>-->
        <!-- Customize your theme here. -->
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/dark_mode_text_primary</item>
        <item name="hintTextColor">@color/dark_mode_text_secondary</item>

        <item name="background">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/buttonStyle</item>
        <item name="android:navigationBarColor">?attr/colorPrimarySurface</item>
        <item name="android:textCursorDrawable">?attr/colorAccent</item>
    </style>

    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="colorOnSurface">?android:textColor</item>
        <item name="colorPrimary">?android:textColor</item>
        <item name="hintTextColor">?android:textColor</item>
        <item name="boxStrokeColor">?android:textColor</item>
        <item name="boxBackgroundColor">?attr/colorPrimarySurface</item>
        <item name="colorError">@color/kRed</item>
    </style>

    <style name="navigation_routes_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/navigation_routes_dimen</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">?attr/colorAccent</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="headline6" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="subtitle1" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="range_slider" parent="Widget.MaterialComponents.Slider">
        <item name="tickVisible">false</item>
        <item name="labelBehavior">gone</item>
        <item name="thumbColor">?attr/colorAccent</item>
        <item name="trackColor">?attr/colorSecondaryVariant</item>

    </style>
</resources>