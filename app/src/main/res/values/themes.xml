<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AnonMeet" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/light_mode_primary</item>
        <item name="colorPrimaryVariant">@color/light_mode_primary_variant</item>
        <item name="colorOnPrimary">@color/light_mode_primary_variant</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/light_mode_secondary</item>
        <item name="colorSecondaryVariant">@color/light_mode_secondary_variant</item>
        <item name="colorOnSecondary">@color/light_mode_text_primary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <!-- Customize your theme here. -->
        <item name="android:textColor">@color/light_mode_text_primary</item>
        <item name="hintTextColor">@color/light_mode_text_secondary</item>
        <item name="background">?attr/colorPrimary</item>
        <item name="android:background">?attr/colorPrimary</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>
        <item name="materialButtonStyle">@style/buttonStyle</item>
    </style>

    <style name="buttonStyle" parent="Widget.MaterialComponents.Button">
        <item name="backgroundTint">@color/light_mode_secondary_variant</item>
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="textButtonStyle" parent="Widget.MaterialComponents.Button.TextButton">
        <item name="cornerRadius">30dp</item>
        <item name="android:textColor">@color/kBlue</item>
        <item name="android:textSize">12sp</item>
    </style>


    <style name="Widget.App.TextInputLayout" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxBackgroundColor">?attr/colorSecondary</item>
        <item name="android:colorBackground">?attr/colorSecondary</item>
        <item name="borderWidth">0dp</item>
        <item name="colorError">@color/kRed</item>
        <item name="android:textColorHint">@color/light_mode_text_primary</item>
        <item name="hintTextColor">@color/light_mode_text_primary</item>
    </style>

    <style name="navigation_routes_style">
        <item name="android:textSize">18sp</item>
        <item name="android:layout_margin">@dimen/navigation_routes_dimen</item>
    </style>

    <style name="Widget.App.Button.OutlinedButton.IconOnly" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:paddingLeft">12dp</item>
        <item name="android:paddingRight">12dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
    </style>
</resources>