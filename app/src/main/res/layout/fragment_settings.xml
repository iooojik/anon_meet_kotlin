<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.filters.FiltersFragment">

    <data>
        <variable
            name="user"
            type="iooojik.anon.meet.models.UserViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/user_credentials"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@{@string/text_view_age(String.format(`%s`, user.Companion.userMutableLiveData.userLogin), String.format(`%s`, user.Companion.userMutableLiveData.filter.myAge))}" />
        <View
            android:id="@+id/divider"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="?android:attr/listDivider" />

        <com.google.android.material.switchmaterial.SwitchMaterial
            android:id="@+id/theme_change_switch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/turn_on_off_dark_mode" />
    </LinearLayout>

</layout>